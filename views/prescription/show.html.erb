<main>
  <div class="container" style="margin-top: 30px;">
      <div class="section1">
        <div class="row valign-wrapper" style="margin-bottom: 0px;">
          <div style="margin-left:10px;">
            <h5 style="font-weight:bold;">처방전 상세페이지</h5>
          </div>
        </div>
        <div class="divider"></div>
        <div class="row" style="margin: 0 5px 5px 0;">
          <div class="input-field col s12">
            <p style="margin-bottom: -13px;margin-top: -13px;">질병명</p>
            <input disabled name="prescription[title]" id="last_name" type="text" class="validate" value="<%=@pre.title%>">
          </div>
          <div class="input-field col s12">
            <p style="margin-bottom: -13px;margin-top: -13px;">병원명</p>
            <input disabled name="prescription[hs_name]" id="last_name" type="text" class="validate" value="<%=@pre.hs_name%>">
          </div>
          <div class="input-field col s12">
            <p style="margin-bottom: -13px;margin-top: -13px;">약국명</p>
            <input disabled name="prescription[ds_name]" id="last_name" type="text" class="validate" value="<%=@pre.ds_name%>">
          </div>
        </div>
      </div>
      <div class="section1">
        <div class="row valign-wrapper" style="margin-bottom: 0px;">
          <div style="margin-left:10px;">
            <h5 style="font-weight:bold;">약 리스트</h5>
          </div>
        </div>
        <div class="divider"></div>
        <div class="collection">
          <%@pre.medicines.each do |m|%>
            <a href="/medicine/show/<%=m.id%>" class="collection-item"><%= m.title%></a>
          <% end %>
        </div>

      </div>
  </div>
</main>
