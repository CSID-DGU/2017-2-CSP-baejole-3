<main>
  <div class="container" style="margin-top: 30px;">
    <form action="/prescription/create" method="POST">
      <div class="section1">
        <div class="row valign-wrapper" style="margin-bottom: 0px;">
          <div style="margin-left:10px;">
            <h5 style="font-weight:bold;">처방전 추가</h5>
          </div>
        </div>
        <div class="divider"></div>
        <div class="row" style="margin: 0 5px 5px 0;">
          <div class="input-field col s12">
            <input name="prescription[title]" id="last_name" type="text" class="validate">
            <label for="last_name">질병명</label>
          </div>
          <div class="input-field col s12">
            <input name="prescription[hs_name]" id="last_name" type="text" class="validate">
            <label for="last_name">병원명</label>
          </div>
          <div class="input-field col s12">
            <input name="prescription[ds_name]" id="last_name" type="text" class="validate">
            <label for="last_name">약국명</label>
          </div>
        </div>
      </div>
      <div class="section1">
        <div class="divider"></div>
        <div class="row" style="margin: 0 5px 5px 0;">
          <div class="input-field col s12">
            <input name="prescription[ps_date]" type="text" class="datepicker">
            <label for="last_name">처방일</label>
          </div>
          <div class="input-field col s12">
            <div class="row">
              <div class="col s4">
                <p>투여횟수</p>
              </div>
              <div class="col s8">
                <p class="range-field">
                  <input name="prescription[cnt]" type="range" id="test5" min="0" max="10" value="0" />
                </p>
              </div>
            </div>
          </div>
          <div class="col s12">
            <div class="row">
              <div class="col s4">
                <p>시작시간</p>
              </div>
              <div class="col s8">
                <p>
                  <input name="prescription[st_time]" type="radio" id="morning" value="아침" />
                  <label for="morning">아침</label>
                </p>
                <p>
                  <input name="prescription[st_time]" type="radio" id="lunch" value="점심"/>
                  <label for="lunch">점심</label>
                </p>
                <p>
                  <input name="prescription[st_time]" type="radio" id="night" value="저녁"/>
                  <label for="night">저녁</label>
                </p>
              </div>
            </div>

          </div>
        </div>
      </div>
      <div class="row">
        <div class="col s6 center-align">
          <a class="waves-effect waves-light btn" onClick="history.back();">취소</a>
        </div>
        <div class="col s6 left-align">
          <button class="btn waves-effect waves-light" type="submit" name="action">의약품 추가
          </button>
        </div>
      </div>

    </form>
  </div>
</main>
<script>
  $('.datepicker').pickadate({
  selectMonths: true, // Creates a dropdown to control month
  selectYears: 15, // Creates a dropdown of 15 years to control year,
  today: '오늘',
  clear: '삭제',
  close: '완성',
  closeOnSelect: false // Close upon selecting a date,
  });
</script>
